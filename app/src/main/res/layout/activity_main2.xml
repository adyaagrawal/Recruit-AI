<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/video_record"
        android:layout_width="148dp"
        android:layout_height="56dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="2dp"
        android:text="Record"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/camera_view" />

    <androidx.camera.view.CameraView
        android:id="@+id/camera_view"
        android:layout_width="308dp"
        android:layout_height="507dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="151dp"
        app:captureMode="mixed"
        app:flash="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:lensFacing="front"
        app:pinchToZoomEnabled="true"
        app:scaleType="centerCrop">

    </androidx.camera.view.CameraView>

    <Button
        android:id="@+id/button"
        android:layout_width="225dp"
        android:layout_height="54dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#B80808"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_record" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/raleway_bold"
        android:text="60"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/video_record"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_view" />

</androidx.constraintlayout.widget.ConstraintLayout>